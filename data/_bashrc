# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth
# append to the history file, don't overwrite it
shopt -s histappend
# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

export PS1='\u@\h \w\$ '

#export POWERLINE_CONFIG_COMMAND="$POWERLINE_REPO_ROOT/scripts/powerline-config"
#export POWERLINE_CONFIG_COMMAND="/opt/local/Library/Frameworks/Python.framework/Versions/2.7/bin/powerline-config"
#export POWERLINE_COMMAND="$POWERLINE_REPO_ROOT/client/powerline.py"
#export POWERLINE_ROOT="/opt/local/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/powerline/"
#export POWERLINE_COMMAND="/opt/local/Library/Frameworks/Python.framework/Versions/2.7/bin/powerline"

alias ls="ls --color=auto"
alias ll="ls -l"
alias sprunge="curl -F 'sprunge=<-' http://sprunge.us"

# help bind and "8.3 Readline Init File" of Bash manual
# >Words are delimited by non-quoted shell metacharacters.
bind '"\eh":shell-backward-word'
bind '"\el":shell-forward-word'

source ~/.usr.env/init-shell.sh
